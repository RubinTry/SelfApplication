<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?actionBarSize"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imgToolbarBack"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@mipmap/back"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:background="@drawable/bg_ripple_white_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></ImageView>


    <TextView
        android:id="@+id/tvBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textColor="@color/txtColor"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>